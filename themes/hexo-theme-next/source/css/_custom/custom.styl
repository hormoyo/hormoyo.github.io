// Custom styles.

  * {
      cursor: url("http://demo.sc.chinaz.com/Files/pic/iconsico/6786/b14.ico"),auto!important
  }
  :active {
      cursor: url("http://demo.sc.chinaz.com/Files/pic/iconsico/6786/b5.ico"),auto!important
  }

  // Custom styles.
code {
    color: #ff7600;
    background: #fbf7f8;
    margin: 2px;
}
// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 3px;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6;
}

